<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/activity_formulario_nome"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="textCapWords"
        android:hint="Nome"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/activity_formulario_telefone"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="Telefone"
        android:inputType="phone"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/activity_formulario_email"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/botao_limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ic_action_limpar_dados"
         />




</LinearLayout>
</ScrollView>
