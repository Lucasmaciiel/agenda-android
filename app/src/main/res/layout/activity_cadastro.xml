<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/activity_formulario_nome"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="textCapWords"
        android:hint="@string/nome"
        android:layout_height="wrap_content"
        android:importantForAutofill="no" />

    <EditText android:id="@+id/activity_formulario_telefone"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/telefone"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:importantForAutofill="no" />

    <EditText android:id="@+id/activity_formulario_email"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/botao_limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/limpar_campos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFF"
        android:textStyle="bold"
        tools:targetApi="m" />




</LinearLayout>
</ScrollView>
